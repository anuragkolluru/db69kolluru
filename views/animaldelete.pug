extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let animalid = toShow._id 
    - let ctype = toShow.ctype 
    - let cnum = toShow.cnum 
    - let location = toShow.location 
    - let actionid = "/resource/animal/" + animalid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='animalAttr mr-3') Animal ID is: 
        div #{animalid} 
      div.row 
        div(class='animalAttr mr-3') Animal type is: 
        div #{ctype} 
      div.row 
        div(class='animalAttr mr-3') Animal number is: 
        div #{cnum} 
      div.row 
        div(class='animalAttr mr-3') Animal location is: 
        div #{location} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the animal collection 
      window.location.href='/animal' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/animal' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 