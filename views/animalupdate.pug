        input#ctype(type='text', name='ctype', value= ctype ) 
    div.form-group 
        label.animalAttr(for='cnum') animal number 
        input#cnum(type='number', name='cnum', value= cnum ) 
    div.form-group 
        label.animalAttr(for='location') animal location 
        input#location(type='text', name='location', value= location ) 
    input(type="submit") 
 
